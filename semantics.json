[
  {
    "label": "Task description",
    "name": "taskDescription",
    "type": "text",
    "widget": "html",
    "description": "Describe how the user should solve the task.",
    "placeholder": "Click on all the verbs in the text that follows.",
    "enterMode": "p",
    "tags": [
      "strong",
      "em",
      "u",
      "a",
      "ul",
      "ol",
      "h2",
      "h3",
      "hr"
    ]
  },
  {
    "label": "Textfield",
    "name": "textField",
    "type": "text",
    "widget": "textarea",
    "placeholder": "This is an answer: *answer*.",
    "description": "Marked words are added with an asterix (*). An asterix may be escaped with another asterix, resulting in ** = *. Example: The correct words are marked with like this: *correctword*, and a character asterix is written like this: **."
  },
  {
    "label": "Text for \"Check\" button",
    "name": "checkAnswerButton",
    "type": "text",
    "default": "Check",
    "common": true
  },
  {
    "label": "Text for \"Retry\" button",
    "name": "tryAgainButton",
    "type": "text",
    "default": "Retry",
    "common": true
  },
  {
    "label": "Text for \"Show solution\" button",
    "name": "showSolutionButton",
    "type": "text",
    "default": "Show solution",
    "common": true
  },
  {
    "label": "Feedback text",
    "name": "score",
    "type": "text",
    "default": "You got @score of @total points.",
    "placeholder": "You got @score of @total points.",
    "description": "Feedback text, variables available: @score @total @correct @wrong @missed. Example: 'Score : @score of @total, correct: @correct, wrong: @wrong, missed: @missed.'",
    "common": true
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioural settings.",
    "description": "These options will let you control how the task behaves.",
    "optional": true,
    "fields": [
      {
        "name": "enableRetry",
        "type": "boolean",
        "label": "Enable \"Retry\"",
        "default": true
      },
      {
        "name": "enableSolutionsButton",
        "type": "boolean",
        "label": "Enable \"Show solution\" button",
        "default": true
      }
    ]
  },
  {
    "name": "feedbackModal",
    "type": "group",
    "label": "Modal style feedback",
    "description": "These options will let you control how the feedback is displayed.",
    "optional": true,
    "fields": [
      {
        "name": "modalEnabled",
        "type": "boolean",
        "label": "Display feedback as modal",
        "description": "Should the feedback be displayed as a modal?",
        "default": false
      },
      {
        "name": "feedbackModalRight",
        "type": "group",
        "label": "Right",
        "description": "right stuff",
        "optional": true,
        "fields": [
          {
            "name": "image",
            "type": "image",
            "label": "Right Image",
            "optional": true,
            "description": "An optional image to display if the question is right"
          },
          {
            "name": "response",
            "type": "text",
            "label": "Text to display if answer is right",
            "default": "Fantastic Job",
            "deprecated": true
          },
          {
            "name": "feedbackButtons",
            "type": "list",
            "label": "Buttons",
            "description": "Add Feedback Buttons",
            "entity": "option",
            "min": 1,
            "max": 3,
            "defaultNum": 1,
            "field": {
              "name": "button",
              "type": "group",
              "label": "Button",
              "fields": [
                {
                  "name": "text",
                  "type": "text",
                  "label": "Text"
                },
                {
                  "name": "resetQuestion",
                  "type": "boolean",
                  "label": "Reset Question",
                  "optional": true,
                  "default": false
                },
                {
                  "name": "link",
                  "type": "text",
                  "label": "Link",
                  "optional": true
                },
                {
                  "name": "slide",
                  "type": "number",
                  "description": "Will default to link unless left blank",
                  "optional": true,
                  "label": "Anchor To Slide Number"
                }
              ]
            }
          }
        ]
      },
      {
        "name": "feedbackModalWrong",
        "type": "group",
        "label": "Wrong",
        "description": "Wrong stuff",
        "optional": true,
        "fields": [
          {
            "name": "image",
            "type": "image",
            "label": "Wrong Image",
            "optional": true,
            "description": "An optional image to display if the question is wrong"
          },
          {
            "name": "response",
            "type": "text",
            "label": "Text to display if answer is wrong",
            "default": "Not Quite!",
            "deprecated": true
          },
          {
            "name": "feedbackButtons",
            "type": "list",
            "label": "Buttons",
            "description": "Add Feedback Buttons",
            "entity": "option",
            "min": 1,
            "max": 3,
            "defaultNum": 1,
            "field": {
              "name": "button",
              "type": "group",
              "label": "Button",
              "fields": [
                {
                  "name": "text",
                  "type": "text",
                  "label": "Text"
                },
                {
                  "name": "resetQuestion",
                  "type": "boolean",
                  "label": "Reset Question",
                  "optional": true,
                  "default": false
                },
                {
                  "name": "link",
                  "type": "text",
                  "label": "Link",
                  "optional": true
                },
                {
                  "name": "slide",
                  "type": "number",
                  "description": "Will default to link unless left blank",
                  "optional": true,
                  "label": "Anchor To Slide Number"
                }
              ]
            }
          }
        ]
      }
    ]
  }
]
